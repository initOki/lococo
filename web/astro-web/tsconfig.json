{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "~app/*": ["./src/app/*"],
      "~entities/*": ["./src/entities/*"],
      "~pages/*": ["./src/pages/*"],
      "~shared/*": ["./src/shared/*"],
      "~widgets/*": ["./src/widgets/*"],
    }
  },
}
